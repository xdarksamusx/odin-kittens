<h1> All Kittens  </h1>
<%  @kittens.each do |kitten| %>
  <p>  <%= link_to kitten.name,   kitten_path(kitten)   %>
    <%= link_to "Delete", kitten_path(kitten), method: :delete, data: { turbo_method: :delete, confirm: "Are you sure?" } %></p>
<%end %>
<% if user_signed_in? %>
  <button>  <%= link_to "Create a New Kitten", new_kitten_path, class: "button"  %> </button>
  <%= button_to "Log Out", destroy_user_session_path, method: :delete %>
<% else%>
  <%= link_to "Log In ", new_user_session_path%>
<%end%>
